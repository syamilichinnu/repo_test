<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_view_kanban" model="ir.ui.view">
        <field name="name">stock.picking.view.kanban.custom.stock.lot</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock_barcode.stock_picking_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//t[@t-name='card']/footer" position="after">
                <field name="picking_type_code" invisible="1"/>
                <t t-if="record.picking_type_code.raw_value == 'incoming' and record.origin.raw_value">
                    <div>
                        <span>Source PO:  </span>
                        <field name="origin"/>
                    </div>
                </t>
            </xpath>
        </field>
    </record>
</odoo>
